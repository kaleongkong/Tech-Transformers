<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edited"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Wordtastic_MainActivity" >

    <Button
        android:id="@+id/standard"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timechallenge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="onClickStandard"
        android:text="Standard"
        style="@style/btnStyleOrange"
        android:textSize="20sp" />

    <Button
        android:id="@+id/timechallenge"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onClickTimeChallenge"
        android:text="Time Challenge"
        style="@style/btnStyleOrange"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timechallenge"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Choose Game Mode"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/homeButton"
        android:background="@drawable/round_shadow_button"
        android:scaleType="fitXY"
        android:src="@drawable/gearicon" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/round_shadow_button"
        android:scaleType="fitXY"
        android:onClick="onClickHomeButton"
        android:src="@drawable/houseicon" />

</RelativeLayout>