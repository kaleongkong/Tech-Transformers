<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edited" >

        <ImageView
            android:id="@+id/tree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/tree" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tree"
            android:layout_centerHorizontal="true"
            android:text="Flashcard Blank was added to:"
            android:textSize="20dp" />



        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tree"
            android:layout_centerHorizontal="true"
            android:text="New Flashcard Added!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />
        
     <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/round_shadow_button"
        android:scaleType="fitXY"
        android:onClick="onClickHomeButton"
        android:src="@drawable/houseicon" />

	  <ImageButton
	    android:id="@+id/menuButton"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_alignParentRight="true"
	    android:layout_alignTop="@+id/homeButton"
	    android:background="@drawable/round_shadow_button"
	    android:layout_marginRight="14dp"
	    android:scaleType="fitXY"
	    android:onClick="openSettings"
	    android:src="@drawable/helpicon" />

	  <Button
	      android:id="@+id/backToDeckPage"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_alignParentBottom="true"
	      android:layout_alignParentLeft="true"
        style="@style/btnStyleOrange"
	      android:onClick="onClickBackToDeckPage"
	      android:text="Back To Deck"
	      android:textSize="20sp" />

	  <Button
	      android:id="@+id/backToGallery"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_alignParentBottom="true"
	      android:layout_alignParentRight="true"
        style="@style/btnStyleOrange"
	      android:onClick="onClickBackToGallery"
	      android:text="Back To Gallery"
	      android:textSize="20sp" />
    
</RelativeLayout>
