<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/editedresultspage"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Wordtastic_MainActivity" >

    <TextView
        android:id="@+id/gameplaystats_timeused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gameplaystats_score"
        android:layout_alignLeft="@+id/gameplaystats_restart"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="23dp"
        android:text="Time Used"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/gameplaystats_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gameplaystats_restart"
        android:layout_alignLeft="@+id/gameplaystats_timeused"
        android:layout_marginBottom="17dp"
        android:text="Score"
        android:textSize="15dp" />

    <Button
        android:id="@+id/gameplaystats_home"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameplaystats_restart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:onClick="onClickHome"
        android:text="Home" />

    <Button
        android:id="@+id/gameplaystats_restart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onClickRestart"
        android:text="Start another game" />

    <TextView
        android:id="@+id/gameplaystats_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gameplaystats_timeused"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Result"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp" />

</RelativeLayout>