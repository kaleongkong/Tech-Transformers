<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Wordtastic_MainActivity" >

    <TextView
        android:id="@+id/gameplaystats_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Result"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/gameplaystats_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameplaystats_title"
        android:layout_centerHorizontal="true"
        android:text="------------------------------------------------------------"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/gameplaystats_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameplaystats_timeused"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="Score"
        android:textSize="25dp" />

    <Button
        android:id="@+id/gameplaystats_home"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameplaystats_restart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:onClick="onClickHome"
        android:text="Home" />

    <TextView
        android:id="@+id/gameplaystats_timeused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameplaystats_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Time Used"
        android:textSize="25sp" />

    <Button
        android:id="@+id/gameplaystats_restart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameplaystats_score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:onClick="onClickRestart"
        android:text="Start another game" />

</RelativeLayout>