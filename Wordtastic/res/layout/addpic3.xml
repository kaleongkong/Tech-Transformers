<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edited" >

     <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/round_shadow_button"
        android:scaleType="fitXY"
        android:onClick="onClickHomeButton"
        android:src="@drawable/houseicon" />

	  <ImageButton
	    android:id="@+id/menuButton"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_alignParentRight="true"
	    android:layout_alignTop="@+id/homeButton"
	    android:background="@drawable/round_shadow_button"
	    android:layout_marginRight="14dp"
	    android:scaleType="fitXY"
	    android:onClick="openSettings"
	    android:src="@drawable/helpicon" />
    
    <ImageView
        android:id="@+id/tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/tree" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/back"
        android:layout_alignBottom="@+id/back"
        android:layout_alignParentRight="true"
        android:onClick="goNext"
        style="@style/btnStyleOrange"
        android:text="Next" />

    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tree"
        android:layout_marginTop="14dp"
        style="@style/btnStyleOrange"
        android:onClick="onClickRetakeButton"
        android:text="Retake" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tree"
        android:layout_centerHorizontal="true"
        android:text="Here&apos;s Your Picture:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

</RelativeLayout>