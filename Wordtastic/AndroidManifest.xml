            android:name="com.wordtastic.wordtastic.addpic4" android:label="@string/app_name"
             android:configChanges="orientation" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.wordtastic.wordtastic.addpic5" android:label="@string/app_name"
             android:configChanges="orientation" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.wordtastic.wordtastic.AddActivity" android:label="@string/app_name"
             android:configChanges="orientation" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.wordtastic.wordtastic.AddCardActivity" android:label="@string/app_name"
             android:configChanges="orientation" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.wordtastic.wordtastic.CameraPreview" android:label="@string/app_name"
             android:configChanges="orientation" 
            android:screenOrientation="portrait">
        </activity>
                
    </application>

</manifest>
