<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="saveAllInfo"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/deckname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Enter Your Deck Name" />

    <EditText
        android:id="@+id/cardname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Card Name" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/cardlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Enter Card Location" />

    <Button
        android:id="@+id/bdecknames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveDeckName"
        android:text="Save Deck Name" />

    <Button
        android:id="@+id/buttoncardname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveCardName"
        android:text="Save Card Name" />

    <Button
        android:id="@+id/buttoncardloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveCardLocation"
        android:text="Save Card Location" />

    <Button
        android:id="@+id/buttonall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveAllInfo"
        android:text="Save All" />

    <Button
        android:id="@+id/intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadNextActivity"
        android:text="Go To Next Intent" />

    <Button
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clear"
        android:text="Clear" />

    <TextView
        android:id="@+id/exception"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
